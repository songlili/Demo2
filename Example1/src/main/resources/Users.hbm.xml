<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.hrm.entity.Users" table="users">
	  <id column="id" name="id" type="integer">
			<generator class="native"/>		<!-- 主键生成策略 -->
		</id>
		<property name="username" length="50" type="string"/>
		<property name="password" length="50" type="string"/>
		<property name="sex" length="2" type="string"/>
		<property name="birthday" length="50" type="string"/>
		<property name="isadmin" length="10" type="string"/>
		<property name="content" length="2000" type="string"/>
	</class>
</hibernate-mapping>
